@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - pizzeria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container py-3">
        <header class="mb-3 d-flex justify-content-between align-items-center">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">pizzeria</a>
            <div class="btn-group btn-block">
                <a asp-controller="ShopCart" asp-action="Index" class="btn btn-inverse btn-block btn-lg">
                    <i class="fa fa-shopping-cart"></i> <span id="cartProductNumber">0</span>
                </a>
            </div>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
