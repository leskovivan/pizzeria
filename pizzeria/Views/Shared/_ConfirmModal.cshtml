@model (string Name, int Quantity)

<div class="modal" id="confirmProductModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Успешно добавлено</h5></div>
            <div class="modal-body"><p>@Model.Name, в количестве @Model.Quantity добавлено в корзину.</p></div>
            <div class="modal-footer">
                <a asp-action="Index" asp-controller="ShopCart" class="btn btn-secondary">В корзину</a>
                <button id="btn-No" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
      $("#confirmProductModal").modal('show');
      $(".btn").click(function () { $("#confirmProductModal").modal('hide'); });
      $("#confirmProductModal").on("hidden.bs.modal", function () {
        var el = document.getElementById("cartProductNumber");
        if(!el) return;
        var n = parseInt(el.innerText || "0");
        el.innerText = (n + 1);
      });
    });
</script>
